
<launch>
  <node name="orb_slam2_mono" pkg="orb_slam2_ros"
      type="orb_slam2_ros_mono" output="screen">

  <remap from="/camera/image_raw" to="/kitti/camera_color_left/image" />

       <param name="publish_pointcloud" type="bool" value="true" />
       <param name="publish_pose" type="bool" value="true" />
       <param name="localize_only" type="bool" value="false" />
       <param name="reset_map" type="bool" value="false" />

       <!-- static parameters -->
       <param name="load_map" type="bool" value="false" />
       <param name="map_file" type="string" value="map.bin" />
       <param name="voc_file" type="string" value="$(find orb_slam2_ros)/orb_slam2/Vocabulary/ORBvoc.txt" />

       <param name="pointcloud_frame_id" type="string" value="map" />
       <param name="camera_frame_id" type="string" value="camera_link" />
       <param name="min_num_kf_in_map" type="int" value="5" />

       <!-- ORB parameters -->
       <param name="/ORBextractor/nFeatures" type="int" value="2000" />
       <param name="/ORBextractor/scaleFactor" type="double" value="1.2" />
       <param name="/ORBextractor/nLevels" type="int" value="8" />
       <param name="/ORBextractor/iniThFAST" type="int" value="20" />
       <param name="/ORBextractor/minThFAST" type="int" value="7" />

       <!-- Camera parameters -->
       <!-- Camera frames per second -->
       <param name="camera_fps" type="int" value="10" />
       <!-- Color order of the images (0: BGR, 1: RGB. It is ignored if images are grayscale) -->
       <param name="camera_rgb_encoding" type="bool" value="true" />

        <!-- Camera calibration parameters -->
        <!--If the node should wait for a camera_info topic to take the camera calibration data-->
       <param name="load_calibration_from_cam" type="bool" value="false" />
       <!-- Camera calibration and distortion parameters (OpenCV) -->
      <param name="camera_fx" type="double" value="718.856" />
      <param name="camera_fy" type="double" value="718.856" />
      <param name="camera_cx" type="double" value="607.1928" />
      <param name="camera_cy" type="double" value="185.2157" />
       <!-- Camera calibration and distortion parameters (OpenCV) -->
      <param name="camera_k1" type="double" value="0" />
      <param name="camera_k2" type="double" value="0" />
      <param name="camera_p1" type="double" value="0" />
      <param name="camera_p2" type="double" value="0" />
      <param name="camera_k3" type="double" value="0" />
    </node>
      <!-- <node pkg="tf" type="static_transform_publisher" name="world_to_map_broadcaster" args="-3.24881101e+00 -1.88648701e+00  5.53917809e+01  5.28733278e-03 -2.82244236e-02 -7.62451906e-05  9.99587625e-01 world camera_link_kitti 100" /> -->
      <node pkg="tf" type="static_transform_publisher" name="world_to_camera_link_kitti" args="5.55111512e-17  3.33066907e-16 -4.44089210e-16  0.00000000e+00 -2.16840441e-18  8.67361764e-19  1.00000000e+00 world camera_link_kitti 100" />
    <node pkg="tf" type="static_transform_publisher" name="camera_link_kitti_to_map" args="0 0 0 0 -0.707 0 0.707 camera_link_kitti map 100" />

</launch>
